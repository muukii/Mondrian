# platform :ios, '9.0'
#

def yoga
  pod 'Yoga', :git => "https://github.com/a2/yoga.git", :tag => 'podspec-1.8.0'
  pod 'YogaKit', :git => "https://github.com/a2/yoga.git", :tag => 'podspec-1.8.0'
end

target 'Mondrian' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  yoga

end

target 'MondrianDemo' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  yoga
  pod 'Then'
  pod 'Reveal-SDK'
  # Pods for MondrianDemo

end

